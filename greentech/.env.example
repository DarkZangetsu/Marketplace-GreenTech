# ===========================================
# EXEMPLE DE CONFIGURATION - GreenTech Marketplace
# Copiez ce fichier vers .env et remplissez vos vraies valeurs
# ===========================================

# ===== CHOIX DE LA BASE DE DONNÉES =====
# Mettre à True pour utiliser PostgreSQL, False pour SQLite
USE_POSTGRESQL=True

# ===== BASE DE DONNÉES POSTGRESQL =====
DB_NAME=greentech_marketplace
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# ===== DJANGO SETTINGS =====
SECRET_KEY=your-very-long-and-secure-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===== CORS =====
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ===== REDIS =====
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CAPACITY=1500
REDIS_EXPIRY=60

# ===== STOCKAGE =====
STATIC_URL=/static/
MEDIA_URL=/media/

# ===== EMAIL =====
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===== SÉCURITÉ =====
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256

# ===== ENVIRONNEMENT =====
ENVIRONMENT=development
