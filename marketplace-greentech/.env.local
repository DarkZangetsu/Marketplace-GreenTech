# ===========================================
# CONFIGURATION DES URLs - GreenTech Marketplace
# ===========================================

# ===== API & BACKEND =====
# URL de base de l'API Django
NEXT_PUBLIC_API_URL=https://marketplace-greentech.onrender.com

# Endpoint GraphQL
NEXT_PUBLIC_GRAPHQL_URL=https://marketplace-greentech.onrender.com/graphql/

# URL des médias (images, fichiers)
NEXT_PUBLIC_MEDIA_URL=https://marketplace-greentech.onrender.com/media/

# ===== WEBSOCKET =====
# URL WebSocket pour les messages en temps réel
NEXT_PUBLIC_WS_URL=wss://marketplace-greentech.onrender.com

# ===== RÉSEAUX SOCIAUX =====
# Facebook
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/greentech.madagascar

# Twitter/X
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/greentech_mada

# Instagram
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/greentech.madagascar

# LinkedIn
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/greentech-madagascar

# ===== CONTACT =====
# Email principal
NEXT_PUBLIC_CONTACT_EMAIL=contact@greentech-mada.com

# Email support
NEXT_PUBLIC_SUPPORT_EMAIL=support@greentech-mada.com

# Email partenariats
NEXT_PUBLIC_PARTNERSHIPS_EMAIL=partenariats@greentech-mada.com

# Téléphones
NEXT_PUBLIC_PHONE_PRIMARY=+261 34 12 345 67
NEXT_PUBLIC_PHONE_SECONDARY=+261 32 00 000 00

# ===== LOCALISATION =====
# Adresse complète
NEXT_PUBLIC_ADDRESS_STREET=Antarandolo
NEXT_PUBLIC_ADDRESS_CITY=Fianarantsoa
NEXT_PUBLIC_ADDRESS_REGION=Haute Matsiatra
NEXT_PUBLIC_ADDRESS_POSTAL_CODE=301
NEXT_PUBLIC_ADDRESS_COUNTRY=Madagascar

# Coordonnées GPS (pour la carte)
NEXT_PUBLIC_LATITUDE=-21.4568
NEXT_PUBLIC_LONGITUDE=47.0866

# ===== CONFIGURATION NEXT.JS =====
# Domaines autorisés pour les images
NEXT_PUBLIC_ALLOWED_IMAGE_DOMAINS=marketplace-greentech.onrender.com,localhost,127.0.0.1

# ===== URLS INTERNES =====
# Pages principales
NEXT_PUBLIC_HOME_URL=/
NEXT_PUBLIC_LISTINGS_URL=/listings
NEXT_PUBLIC_CATEGORIES_URL=/categories
NEXT_PUBLIC_ABOUT_URL=/about
NEXT_PUBLIC_CONTACT_URL=/contact

# Authentification
NEXT_PUBLIC_LOGIN_URL=/auth/login
NEXT_PUBLIC_REGISTER_URL=/auth/register

# Dashboard
NEXT_PUBLIC_DASHBOARD_URL=/dashboard
NEXT_PUBLIC_MESSAGES_URL=/messages

# ===== CONFIGURATION EXTERNE =====
# CDN Leaflet pour les cartes
NEXT_PUBLIC_LEAFLET_CSS_URL=https://unpkg.com/leaflet@1.9.4/dist/leaflet.css
NEXT_PUBLIC_LEAFLET_JS_URL=https://unpkg.com/leaflet@1.9.4/dist/leaflet.js

# ===== ENVIRONNEMENT =====
# Mode de développement
NODE_ENV=development

# ===== SÉCURITÉ =====
# Domaines CORS autorisés (pour le backend Django)
CORS_ALLOWED_ORIGINS=https://marketplace-greentech.vercel.app,http://localhost:3000,http://127.0.0.1:3000

# ===== REDIS (pour WebSocket) =====
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# ===== BASE DE DONNÉES =====
# URL de la base de données (pour le backend Django)
DATABASE_URL=sqlite:///db.sqlite3
